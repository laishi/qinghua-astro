---
import WavesFooter from "./Header/Waves.astro";
const info = {
    logo: "/assets/images/icons/mstile-310x310.png",
    brand: "青花卓越",
    slogan: ["专注为中小企业", "打造低价快速网站"],
    contacts: {
        phones: ["13640566324", "18883919122"],
        emails: ["504677424@qq.com", "laishi886@hotmail.com"],
        address: "重庆市渝中区",
    },
    services: [
        { name: "网站设计", icon: "fa-laptop-code" },
        { name: "网站开发", icon: "fa-code" },
        { name: "SEO优化", icon: "fa-search" },
        { name: "移动端优化", icon: "fa-mobile-alt" },
    ],
};
---

<footer>
    <div class="footer-container">
        <div class="footer-content">
            <!-- Services Section -->
            <div class="services-section glowCard">
                <h3><i class="fas fa-tools"></i> 我们的服务</h3>
                <ul>
                    {
                        info.services.map((service, index) => (
                            <li key={index}>
                                <i class={`fas ${service.icon} bullet-icon`} />
                                <span>{service.name}</span>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Brand Section -->
            <div class="brand-section glowCard">
                <div class="brand-title">
                    <img src={info.logo} alt={`${info.brand} Logo`} />
                    <h3>{info.brand}</h3>
                    {
                        info.slogan.map((line, index) => (
                            <p key={index}>{line}</p>
                        ))
                    }
                </div>
            </div>

            <!-- Contact Section -->
            <div class="contact-section glowCard">
                <h3><i class="fas fa-address-book"></i> 联系我们</h3>
                <div class="contact-details">
                    <p>
                        <i class="fas fa-map-marker-alt contact-icon"></i>
                        <span>{info.contacts.address}</span>
                    </p>
                    {
                        info.contacts.phones.map((phone, index) => (
                            <p key={index}>
                                <i class="fas fa-phone contact-icon" />
                                <a href={`tel:${phone}`} class="contact-link">
                                    {phone}
                                </a>
                            </p>
                        ))
                    }
                    {
                        info.contacts.emails.map((email, index) => (
                            <p key={index}>
                                <i class="fas fa-envelope contact-icon" />
                                <a
                                    href={`mailto:${email}`}
                                    class="contact-link"
                                >
                                    {email}
                                </a>
                            </p>
                        ))
                    }
                </div>
            </div>
        </div>
        <!-- Bottom Bar -->
        <div class="bottom-bar">
            <p>
                <i class="far fa-copyright"></i>
                {new Date().getFullYear()}
                {info.brand}. All rights reserved.
            </p>
        </div>
    </div>

    <WavesFooter />
</footer>

<style>
    footer {
        background: linear-gradient(247.23deg, rgb(5, 43, 31), #040d24);
        font-family: "Arial", sans-serif;
        box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.2);
        min-height: 300px;
        color: rgba(240, 248, 255, 0.8);
    }
    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 10rem 1rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .bottom-bar {
        position: absolute;
        bottom: 0;
        width: 80%;
        height: 2em;
        text-align: center;
        background-color: rgba(6, 68, 73, 0);
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1;
    }
    .bottom-bar p {
        line-height: 2em;
    }

    .footer-content {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 5rem;
        margin-bottom: 2rem;
    }
    .brand-section,
    .services-section,
    .contact-section {
        flex: 1 1 250px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 1.5rem;
    }
    .glowCard {
        position: relative;
        background: linear-gradient(
            137deg,
            rgb(255, 0, 179) 0%,
            rgba(0, 212, 255, 1) 100%
        );
        border-radius: 30px;
        filter: drop-shadow(0px 0px 30px rgba(209, 38, 197, 0.5));
        padding: 1.5rem;
        min-height: 200px;
        overflow: hidden;
    }
    .glowCard::after {
        content: "";
        background-color: rgba(24, 24, 24, 0.9);
        position: absolute;
        z-index: 1;
        height: 98%;
        width: 98%;
        top: 1%;
        left: 1%;
        border-radius: 28px;
        z-index: -1;
    }
    .brand-title {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        z-index: 2;
    }
    .brand-title img {
        width: 6rem;
        height: 6rem;
        border-radius: 50%;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        animation: breathe 2.5s ease-in-out infinite;
    }
    .brand-title h3 {
        font-size: 1.2rem;
        font-weight: bold;
        margin: 1rem 0 0.5rem;
        text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
    }
    .brand-title p {
        font-size: 1.2rem;
        font-style: italic;
        margin: 0.25rem 0;
    }
    h3 {
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
        border-bottom: 2px solid #ffffff;
        padding-bottom: 0.5rem;
        letter-spacing: 0.05em;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    h3 i {
        font-size: 1.2rem;
    }
    ul {
        list-style: none;
        padding: 0;
    }
    ul li {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .bullet-icon {
        font-size: 1rem;
    }
    .contact-details p {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .contact-icon {
        font-size: 1rem;
    }
    .contact-link {
        color: inherit;
        text-decoration: none;
    }
    .contact-link:hover {
        text-decoration: underline;
    }

    @keyframes breathe {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.9;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    @media (max-width: 768px) {
        .footer-container {
            margin-bottom: 10em;
        }
        .footer-content {
            flex-direction: column;
        }
        .brand-section,
        .services-section,
        .contact-section {
            flex: 1 1 100%;
        }
    }
</style>
